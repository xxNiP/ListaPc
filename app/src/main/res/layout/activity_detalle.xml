<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgProductoD"
        android:layout_width="221dp"
        android:layout_height="236dp"
        android:layout_margin="15dp"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:contentDescription="@string/imgProducto"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtProductoNombreD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="170dp"
        android:layout_marginRight="170dp"
        android:padding="5dp"
        android:text="@string/txtProductoNombre"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProductoD" />

    <TextView
        android:id="@+id/txtProductoDescripD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="170dp"
        android:layout_marginRight="170dp"
        android:padding="5dp"
        android:text="@string/txtProductoDescrip"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProductoNombreD" />

    <Button
        android:id="@+id/btnCompra"
        android:layout_width="153dp"
        android:layout_height="58dp"
        android:layout_margin="15dp"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="170dp"
        android:layout_marginRight="170dp"
        android:padding="5dp"
        android:text="@string/btnCompra"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="#009688"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProductoDescripD" />

</androidx.constraintlayout.widget.ConstraintLayout>